{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "cypress"],
  "compilerOptions": {
    "module": "esnext",
    "rootDir": "src",
    "outDir": "dist",
    "target": "es6",
    "lib": ["ES2015", "ES6", "dom", "dom.iterable"],
    "sourceMap": true,
    "types": ["cypress", "node"],
    "moduleResolution": "node"
  }
}
